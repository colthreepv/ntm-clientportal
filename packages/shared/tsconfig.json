{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "typesVersions": {
    "*": {
      "*": ["./dist/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
